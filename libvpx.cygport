NAME="libvpx"
VERSION=1.3.0
RELEASE=2
CATEGORY="Libs"
SUMMARY="WebM VP8 video codec"
DESCRIPTION="WebM is an open, royalty-free, media file format designed for
the web. WebM defines the file container structure, video and audio formats.
WebM files consist of video streams compressed with the VP8 video codec and
audio streams compressed with the Vorbis audio codec. The WebM file structure
is based on the Matroska container."
HOMEPAGE="http://www.webmproject.org/"
SRC_URI="http://webm.googlecode.com/files/${NAME}-v${VERSION}.tar.bz2"
SRC_DIR="${NAME}-v${VERSION}"
PATCH_URI="
	http://pkgs.fedoraproject.org/cgit/libvpx.git/plain/Bug-fix-in-ssse3-quantize-function.patch?h=f22
	http://pkgs.fedoraproject.org/cgit/libvpx.git/plain/libvpx-1.3.0-CVE-2015-1258.patch?h=f22
	http://pkgs.fedoraproject.org/cgit/libvpx.git/plain/libvpx-v1.3.0-fix-max_align_t-conflict.patch?h=f22
"

PKG_NAMES="${NAME} libvpx1 libvpx-devel libvpx-doc libvpx-utils"
libvpx_CATEGORY="_obsolete"
libvpx_REQUIRES="libvpx-utils"
libvpx1_SUMMARY="${SUMMARY} (runtime)"
libvpx1_CONTENTS="--exclude=html usr/bin/cygvpx-1.dll usr/share/doc/"
libvpx_devel_SUMMARY="${SUMMARY} (development)"
libvpx_devel_CONTENTS="usr/include/ usr/lib/"
libvpx_doc_CATEGORY="Doc"
libvpx_doc_SUMMARY="${SUMMARY} (API documentation)"
libvpx_doc_CONTENTS="usr/share/doc/${NAME}/html/"
libvpx_utils_CATEGORY="Video"
libvpx_utils_SUMMARY="${SUMMARY} (utilities)"
libvpx_utils_CONTENTS="usr/bin/*.exe"

src_compile() {
	cd ${B}
	${S}/configure \
		--prefix=/usr \
		--target=x86${ARCH_i686+-win32}${ARCH_x86_64+_64-win64}-gcc \
		--disable-install-srcs \
		|| error "configure failed"
	# keep debug symbols
	cygmake HAVE_GNU_STRIP=no

	${CC} -shared -o cygvpx-1.dll -Wl,--out-implib,libvpx.dll.a \
		-Wl,--whole-archive,libvpx.a,--no-whole-archive \
		|| error "shared library build failed"


	# link executables dynamically
	rm -f *.exe
	cygmake HAVE_GNU_STRIP=no
}

src_install() {
	cd ${B}
	cyginstall
	rm -f ${D}/usr/lib/libvpx.a

	dobin cygvpx-1.dll
	dolib libvpx.dll.a

	docinto html
	dodoc docs/html/*
}
